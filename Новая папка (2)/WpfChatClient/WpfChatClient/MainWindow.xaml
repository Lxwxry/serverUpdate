<Window x:Class="WpfChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 8">
            <TextBlock Text="Online: " VerticalAlignment="Center"/>
            <TextBlock x:Name="OnlineCounter" Text="0" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="   " />
            <TextBlock Text="Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="NameBox" Width="120" Margin="6 0 0 0" />
        </StackPanel>

        <TextBox x:Name="ChatBox" Grid.Row="1" IsReadOnly="True"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 8 0 0">
            <TextBox x:Name="InputBox" Width="260" Margin="0 0 8 0"/>
            <Button Content="Send" Width="80" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>